# Agoric Chat Bridge Environment Configuration
# Copy this file to .env and configure the values according to your setup

# ============================================================================
# Server Configuration
# ============================================================================
PORT=3000

# ============================================================================
# Mastra Agent Configuration
# ============================================================================
MASTRA_ENDPOINT=http://localhost:4111/api
MASTRA_AGENT_ID=salesAgent
MASTRA_API_KEY=your_mastra_api_key_here
MASTRA_HEADERS={"X-Custom-Header": "value"}
MASTRA_TIMEOUT=30000

# ============================================================================
# Debug/Testing Configuration
# ============================================================================
# Set to true to echo messages back (for testing)
REPEAT_MODE=false

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_POLLING=true
# Optional: Use webhook instead of polling
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
# TELEGRAM_WEBHOOK_PORT=8443

# How to get Telegram Bot Token:
# 1. Message @BotFather on Telegram
# 2. Send /newbot command
# 3. Follow instructions to create your bot
# 4. Copy the token provided by BotFather

# ============================================================================
# Zalo Personal Configuration
# ============================================================================
ZALO_PERSONAL_ENABLED=false

# Zalo OA (Official Account) Configuration
# For business integration using Zalo Official Account
ZALO_OA_ACCESS_TOKEN=
ZALO_APP_ID=your_zalo_app_id_here
ZALO_APP_SECRET=your_zalo_app_secret_here
ZALO_CALLBACK_URL=https://your-domain.com/webhook/zalo

# How to get Zalo OA credentials:
# 1. Go to https://developers.zalo.me/
# 2. Create a new app
# 3. Get App ID and App Secret from your app dashboard
# 4. Configure webhook URL in your app settings

# Zalo Personal Configuration
# For personal account automation (advanced usage)
# WARNING: Use with caution as this may violate Zalo's Terms of Service
ZALO_IMEI=your_device_imei_here
ZALO_COOKIE='your_browser_cookies_json_here'
ZALO_USER_AGENT='your_browser_user_agent_here'

# How to get Zalo Personal credentials:
# 1. IMEI: Generate a random UUID or use your device IMEI
# 2. Cookie: Export cookies from your browser after logging into Zalo
#    - Use browser dev tools (F12) > Application > Cookies
#    - Or use browser extensions like "Cookie Editor"
#    - Export as JSON format
# 3. User Agent: Copy from browser dev tools > Network tab > Request headers

# ============================================================================
# Line Configuration
# ============================================================================
LINE_ENABLED=false
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CALLBACK_URL=https://your-domain.com/webhook/line

# How to get Line credentials:
# 1. Go to https://developers.line.biz/console/
# 2. Create a new provider and channel
# 3. Get Channel Access Token and Channel Secret
# 4. Configure webhook URL in channel settings

# ============================================================================
# WhatsApp Business API Configuration
# ============================================================================
WHATSAPP_ENABLED=false
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_CALLBACK_URL=https://your-domain.com/webhook/whatsapp

# How to get WhatsApp Business API credentials:
# 1. Go to https://developers.facebook.com/
# 2. Create a new app and add WhatsApp product
# 3. Get Access Token and Phone Number ID
# 4. Set up webhook with verify token

# ============================================================================
# Viber Configuration
# ============================================================================
VIBER_ENABLED=false
VIBER_AUTH_TOKEN=your_viber_auth_token_here
VIBER_BOT_NAME=your_bot_name_here
VIBER_BOT_AVATAR=https://your-domain.com/avatar.jpg
VIBER_CALLBACK_URL=https://your-domain.com/webhook/viber

# How to get Viber credentials:
# 1. Go to https://partners.viber.com/
# 2. Create a new bot account
# 3. Get Auth Token from your bot settings
# 4. Configure bot name and avatar URL

# ============================================================================
# Security Notes
# ============================================================================
# - Never commit .env file to version control
# - Use strong, unique tokens for each service  
# - Rotate tokens regularly
# - Use HTTPS for all webhook URLs in production
# - Keep this file secure and limit access permissions

# ============================================================================
# Development vs Production
# ============================================================================
# For development:
# - Use polling for Telegram (TELEGRAM_POLLING=true)
# - Use localhost URLs for testing
# - Enable REPEAT_MODE for testing

# For production:
# - Use webhooks instead of polling for better performance
# - Use proper domain names with SSL certificates
# - Disable REPEAT_MODE
# - Set appropriate timeouts and rate limits